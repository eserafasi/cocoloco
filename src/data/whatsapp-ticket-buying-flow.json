{
  "data_api_version": "3.0",
  "routing_model": {
    "WELCOME_SCREEN": ["SHOW_SELECTION"],
    "SHOW_SELECTION": ["TICKET_DETAILS"],
    "TICKET_DETAILS": ["CONTACT_DETAILS"],
    "CONTACT_DETAILS": ["PAYMENT_METHOD"],
    "PAYMENT_METHOD": ["CONFIRMATION"],
    "CONFIRMATION": []
  },
  "version": "7.3",
  "screens": [
    {
      "id": "WELCOME_SCREEN",
      "title": "Buy Tickets",
      "terminal": false,
      "data": {},
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "TextHeading",
            "text": "Welcome to CocoloCo Shows"
          },
          {
            "type": "TextBody",
            "text": "Purchase tickets for upcoming shows in just a few steps."
          },
          {
            "type": "Footer",
            "label": "Start",
            "on-click-action": {
              "name": "navigate",
              "payload": {
                "screen": "SHOW_SELECTION"
              }
            }
          }
        ]
      }
    },
    {
      "id": "SHOW_SELECTION",
      "title": "Select a Show",
      "terminal": false,
      "data": {
        "show_id": "",
        "show_title": "",
        "show_date": "",
        "show_venue": ""
      },
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "TextHeading",
            "text": "Which show would you like?"
          },
          {
            "type": "TextBody",
            "text": "Choose from the mockup schedule below."
          },
          {
            "type": "Form",
            "name": "show_selection",
            "children": [
              {
                "type": "Select",
                "name": "show_id",
                "label": "Available shows",
                "required": true,
                "options": [
                  {
                    "id": "show-2024-11-02",
                    "title": "Neon Nights — Nov 2, 2024 · Main Hall"
                  },
                  {
                    "id": "show-2024-11-16",
                    "title": "Indie Horizon — Nov 16, 2024 · Stage B"
                  },
                  {
                    "id": "show-2024-12-07",
                    "title": "Late Set Sessions — Dec 7, 2024 · Rooftop"
                  }
                ]
              }
            ]
          },
          {
            "type": "Footer",
            "label": "Continue",
            "on-click-action": {
              "name": "navigate",
              "payload": {
                "screen": "TICKET_DETAILS"
              }
            }
          }
        ]
      }
    },
    {
      "id": "TICKET_DETAILS",
      "title": "Tickets",
      "terminal": false,
      "data": {
        "ticket_quantity": 1,
        "ticket_type": "general",
        "seat_section": "floor"
      },
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "TextHeading",
            "text": "Choose ticket details"
          },
          {
            "type": "TextBody",
            "text": "Mock pricing: General $35, VIP $75."
          },
          {
            "type": "Form",
            "name": "ticket_details",
            "children": [
              {
                "type": "NumberInput",
                "name": "ticket_quantity",
                "label": "Quantity",
                "min": 1,
                "max": 10,
                "required": true
              },
              {
                "type": "Select",
                "name": "ticket_type",
                "label": "Ticket type",
                "required": true,
                "options": [
                  {
                    "id": "general",
                    "title": "General admission"
                  },
                  {
                    "id": "vip",
                    "title": "VIP"
                  }
                ]
              },
              {
                "type": "Select",
                "name": "seat_section",
                "label": "Section",
                "required": true,
                "options": [
                  {
                    "id": "floor",
                    "title": "Floor"
                  },
                  {
                    "id": "balcony",
                    "title": "Balcony"
                  }
                ]
              }
            ]
          },
          {
            "type": "Footer",
            "label": "Continue",
            "on-click-action": {
              "name": "navigate",
              "payload": {
                "screen": "CONTACT_DETAILS"
              }
            }
          }
        ]
      }
    },
    {
      "id": "CONTACT_DETAILS",
      "title": "Your Details",
      "terminal": false,
      "data": {
        "full_name": "",
        "email": "",
        "phone": ""
      },
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "TextHeading",
            "text": "Who is the ticket for?"
          },
          {
            "type": "TextBody",
            "text": "Use the contact details that should receive the ticket."
          },
          {
            "type": "Form",
            "name": "contact_details",
            "children": [
              {
                "type": "TextInput",
                "name": "full_name",
                "label": "Full name",
                "required": true
              },
              {
                "type": "TextInput",
                "name": "email",
                "label": "Email",
                "required": true
              },
              {
                "type": "TextInput",
                "name": "phone",
                "label": "Phone number",
                "required": true
              }
            ]
          },
          {
            "type": "Footer",
            "label": "Continue",
            "on-click-action": {
              "name": "navigate",
              "payload": {
                "screen": "PAYMENT_METHOD"
              }
            }
          }
        ]
      }
    },
    {
      "id": "PAYMENT_METHOD",
      "title": "Payment",
      "terminal": false,
      "data": {
        "payment_method": ""
      },
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "TextHeading",
            "text": "Select a payment method"
          },
          {
            "type": "TextBody",
            "text": "Mock checkout options for this flow demo."
          },
          {
            "type": "Form",
            "name": "payment_method",
            "children": [
              {
                "type": "Select",
                "name": "payment_method",
                "label": "Payment method",
                "required": true,
                "options": [
                  {
                    "id": "card",
                    "title": "Credit or debit card"
                  },
                  {
                    "id": "transfer",
                    "title": "Bank transfer"
                  },
                  {
                    "id": "cash",
                    "title": "Pay at venue"
                  }
                ]
              }
            ]
          },
          {
            "type": "Footer",
            "label": "Continue",
            "on-click-action": {
              "name": "navigate",
              "payload": {
                "screen": "CONFIRMATION"
              }
            }
          }
        ]
      }
    },
    {
      "id": "CONFIRMATION",
      "title": "Confirmation",
      "terminal": true,
      "success": true,
      "data": {},
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "TextHeading",
            "text": "Review and confirm"
          },
          {
            "type": "TextBody",
            "text": "We will confirm availability and send your ticket details."
          },
          {
            "type": "Footer",
            "label": "Complete Purchase",
            "on-click-action": {
              "name": "complete",
              "payload": {}
            }
          }
        ]
      }
    }
  ]
}
